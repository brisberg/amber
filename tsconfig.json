{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false
  },
  "exclude": ["node_modules"]
}

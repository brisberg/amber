{
  "name": "amber",
  "version": "0.1.0",
  "description": "Amber AI is a set of AI Code for playing the Screeps MMO",
  "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "build": "rollup -c",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-sim": "rollup -c --environment DEST:sim",
    "push-local": "rollup -c && cp dist/* /Users/brisberg/Library/Application\\ Support/Screeps/scripts/screeps.com/sim/",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "jest",
    "test-unit-watch": "jest --watch",
    "test-unit-cov": "jest --coverage",
    "test-integration": "npm run build && rollup -c rollup.test-integration-config.js && mocha dist/test-integration.bundle.js",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brisberg/amber.git"
  },
  "author": "Brandon Risberg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brisberg/amber/issues"
  },
  "engines": {
    "node": "10.x"
  },
  "homepage": "https://github.com/brisberg/amber#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-typescript": "^3.0.0",
    "@screeps/common": "^2.12.1",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^10.17.17",
    "@types/screeps": "github:screepers/typed-screeps",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "clang-format": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^25.4.0",
    "lodash": "^4.17.15",
    "rollup": "^1.27.14",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps": "^0.1.2",
    "screeps-jest": "github:eduter/screeps-jest#1.1.0",
    "screeps-server-mockup": "github:brisberg/screeps-server-mockup#typescript",
    "ts-jest": "^25.4.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "source-map": "^0.6.1"
  }
}
